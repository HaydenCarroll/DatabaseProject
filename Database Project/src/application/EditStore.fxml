<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane onMouseEntered="#fillEdit" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SelectStoreController">
   <center>
      <BorderPane prefHeight="400.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <bottom>
            <Pane prefHeight="30.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="29.0" prefWidth="800.0" spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#enterEdit" text="Enter" />
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#exitEdit" text="Exit" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </HBox>
               </children>
            </Pane>
         </bottom>
         <center>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="storeID" layoutX="59.0" layoutY="51.0" />
                  <TextField fx:id="numOfEmployees" layoutX="59.0" layoutY="185.0" />
                  <TextField fx:id="address" layoutX="518.0" layoutY="76.0" />
                  <TextField fx:id="manager" layoutX="518.0" layoutY="185.0" />
                  <Label layoutX="571.0" layoutY="55.0" text="Address" />
                  <Label layoutX="74.0" layoutY="167.0" text="Number Of Employees" />
                  <Label layoutX="569.0" layoutY="167.0" text="Manager" />
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </center>
</BorderPane>
