<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane onMouseEntered="#initilize" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SelectStoreController">
   <center>
      <BorderPane prefHeight="400.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <bottom>
            <Pane prefHeight="30.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="29.0" prefWidth="800.0" spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#openAddStore" text="Add" />
                        <Button mnemonicParsing="false" onAction="#openEditStore" text="Edit" />
                        <Button mnemonicParsing="false" onAction="#deleteStore" text="Delete" />
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#exit" text="Exit" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </HBox>
               </children>
            </Pane>
         </bottom>
         <center>
            <TableView fx:id="tableview" onMouseClicked="#selectItem" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </center>
</BorderPane>
