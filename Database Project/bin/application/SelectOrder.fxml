<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SelectOrderController">
   <center>
      <BorderPane prefHeight="400.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <center>
            <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <ComboBox fx:id="orderID" prefWidth="150.0" promptText="Order ID" />
                  <TextField fx:id="custID" editable="false" GridPane.columnIndex="2" />
                  <TextField fx:id="orderDate" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="cardType" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="shipAmnt" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  <TextField fx:id="taxAmnt" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="shipAddressID" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                  <TextField fx:id="cardNum" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                  <TextField fx:id="cardExpires" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="billingAddressID" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="4" />
                  <Label text="Customer ID:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />
                  <Label text="Ship Amount:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                  <Label text="Order Date:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                  <Label text="Tax Amount:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                  <Label text="Card Type:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                  <Label text="Card Expires:" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                  <Label text="Ship Address ID:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                  <Label text="Card Number:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                  <Label text="Billing Address ID:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                  <Label text="Ship Date:" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
                  <TextField fx:id="shipDate" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </GridPane>
         </center>
         <bottom>
            <HBox alignment="CENTER_LEFT" prefHeight="29.0" prefWidth="800.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#openAddOrder" text="Add" />
                  <Button mnemonicParsing="false" onAction="#openEditOrder" text="Edit" />
                  <Button mnemonicParsing="false" onAction="#deleteOrder" text="Delete" />
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#exit" text="Exit" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
