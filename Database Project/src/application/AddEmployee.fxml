<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddEmployeeController">
   <center>
      <BorderPane prefHeight="400.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <center>
            <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextField fx:id="position" GridPane.columnIndex="2" />
                  <TextField fx:id="fName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="phoneNum" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="lName" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  <TextField fx:id="pay" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="hireDate" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                  <TextField fx:id="street" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                  <TextField fx:id="city" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="state" GridPane.columnIndex="3" GridPane.rowIndex="4" />
                  <Label text="Position:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />
                  <Label text="Last Name:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                  <Label text="First Name:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                  <Label text="Pay:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                  <Label text="Phone Number:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                  <Label text="City:" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                  <Label text="Hire Date" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                  <Label text="Street:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                  <Label text="State:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </GridPane>
         </center>
         <bottom>
            <HBox alignment="CENTER_LEFT" prefHeight="29.0" prefWidth="800.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#enter" text="Enter" />
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#exit" text="Exit" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
